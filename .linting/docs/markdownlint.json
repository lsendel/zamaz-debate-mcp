{
  "default": true,
  "line-length": {
    "line_length": 100,
    "code_blocks": false,
    "tables": false
  },
  "no-trailing-spaces": true,
  "no-hard-tabs": true,
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "no-trailing-punctuation": {
    "punctuation": ".,;:!"
  },
  "no-blanks-blockquote": false,
  "ol-prefix": {
    "style": "ordered"
  },
  "no-inline-html": {
    "allowed_elements": ["br", "details", "summary", "kbd", "sup", "sub"]
  },
  "hr-style": {
    "style": "---"
  },
  "no-emphasis-as-heading": false,
  "first-line-heading": false,
  "code-block-style": {
    "style": "fenced"
  },
  "proper-names": {
    "names": [
      "JavaScript",
      "TypeScript",
      "React",
      "Docker",
      "Kubernetes",
      "Maven",
      "Checkstyle",
      "SpotBugs",
      "PMD",
      "ESLint",
      "Prettier",
      "GitHub",
      "Zamaz",
      "MCP"
    ],
    "code_blocks": false
  }
}
