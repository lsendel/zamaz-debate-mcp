{
  // Java settings
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.checkstyle.configuration": ".linting/java/checkstyle.xml",
  "java.checkstyle.version": "10.20.1",
  "java.format.settings.url": ".linting/java/checkstyle.xml",
  "java.format.settings.profile": "GoogleStyle",
  "java.codeGeneration.insertionLocation": "afterCursor",
  "java.codeGeneration.generateComments": true,
  "java.saveActions.organizeImports": true,
  "java.sources.organizeImports.starThreshold": 99,
  "java.sources.organizeImports.staticStarThreshold": 99,

  // TypeScript/JavaScript settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ESLint settings
  "eslint.enable": true,
  "eslint.workingDirectories": ["debate-ui"],
  "eslint.options": {
    "configFile": ".linting/frontend/.eslintrc.js"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // Prettier settings
  "prettier.enable": true,
  "prettier.configPath": ".linting/frontend/.prettierrc",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,

  // Format on save settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit"
  },

  // File associations
  "files.associations": {
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "Dockerfile*": "dockerfile",
    "*.dockerfile": "dockerfile"
  },

  // YAML settings
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.schemas": {
    "https://json.schemastore.org/docker-compose.json": [
      "docker-compose*.yml",
      "docker-compose*.yaml"
    ],
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ]
  },

  // Markdown settings
  "markdownlint.config": ".linting/docs/markdownlint.json",
  "markdown.validate.enabled": true,
  "markdown.preview.linkify": true,
  "markdown.preview.typographer": true,

  // JSON settings
  "json.validate.enable": true,
  "json.format.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "url": "https://json.schemastore.org/package.json"
    },
    {
      "fileMatch": ["tsconfig*.json"],
      "url": "https://json.schemastore.org/tsconfig.json"
    },
    {
      "fileMatch": [".eslintrc.json", ".eslintrc"],
      "url": "https://json.schemastore.org/eslintrc.json"
    }
  ],

  // Editor settings
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.trimAutoWhitespace": true,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,

  // File settings
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.encoding": "utf8",
  "files.eol": "\n",

  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/build": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.git": true,
    "**/logs": true,
    "**/data": true,
    "**/*.log": true
  },

  // File watcher settings
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/target/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.git/**": true,
    "**/logs/**": true,
    "**/data/**": true,
    "**/*.log": true
  },

  // Language-specific settings
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[xml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[dockerfile]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // Terminal settings
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",

  // Git settings
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // Problems panel settings
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showSymbols": true,

  // IntelliSense settings
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggestSelection": "first",

  // Code lens
  "editor.codeLens": true,
  "java.references.codeLens.enabled": true,
  "java.implementations.codeLens.enabled": true,

  // Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,

  // Zen mode
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,

  // Workbench settings
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "welcomePage",
  "java.compile.nullAnalysis.mode": "automatic"
}
