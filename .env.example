# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_secure_password

# PostgreSQL Docker Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_SSL=false

# Gateway Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ENVIRONMENT=development

# Security Configuration
JWT_SECRET=your-256-bit-secret-key-for-jwt-token-generation
JWT_EXPIRATION=86400000

# SonarQube Configuration (for CI/CD)
SONAR_TOKEN=your_sonar_token_here
SONAR_URL=https://sonarcloud.io
SONAR_PROJECT_KEY=your_project_key
SONAR_ORGANIZATION=your_organization

# Optional: Service Ports
SERVER_PORT=8080
ORGANIZATION_SERVICE_PORT=5005
CONTEXT_SERVICE_PORT=5007
CONTROLLER_SERVICE_PORT=5013